<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:orientation="vertical"
        android:minWidth="25px"
        android:minHeight="25px"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/linearLayout1"
        android:background="#ff546e7a">
        <TextView
            android:text="Show Screen"
            android:layout_width="match_parent"
            android:layout_height="89.0dp"
            android:id="@+id/textView1"
            android:background="#ff000000"
            android:textStyle="bold"
            android:textSize="30dp"
            android:textColor="#ffffffff"
            android:gravity="center" />

        <LinearLayout
            android:orientation="vertical"
            android:minWidth="25px"
            android:minHeight="25px"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/linearLayout2"
            android:gravity="center"
            android:layout_margin="10dp"
            android:background="#ff000000">
            <TextView
                android:text="username"
                android:layout_width="match_parent"
                android:layout_height="45.5dp"
                android:id="@+id/uid"
                  android:padding="10dp"
                android:background="#ffffffff"
                android:textColorHint="#ff000000"/>
            <TextView
                android:text="Show"
                android:layout_width="match_parent"
                android:layout_height="192.5dp"
                android:id="@+id/show"
                android:textColor="#ffffffff"
                android:textStyle="bold"
                android:textSize="20dp"
                android:gravity="center" />           
        </LinearLayout>
             <LinearLayout
                android:orientation="horizontal"
                android:minWidth="25px"
                android:minHeight="25px"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/linearLayout4"
                android:background="#ff9e9e9e"
                android:gravity="center"
                android:layout_margin="20dp"
                android:layout_gravity="center">
            <Button
                android:text="All Users"
                android:layout_width="120dp"
                android:layout_height="79.0dp"
                android:id="@+id/allusers"
                android:layout_margin="10dp"
                android:textStyle="bold"
                android:textSize="22dp" />
            <Button
                android:text="Logout"
                android:layout_width="120dp"
                android:layout_height="77.5dp"
                android:id="@+id/logout"
                android:layout_margin="10dp"
                android:textSize="22dp"
                android:textStyle="bold" />
            </LinearLayout>
        </LinearLayout>
</RelativeLayout>

