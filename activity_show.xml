<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:orientation="vertical"
        android:minWidth="25px"
        android:minHeight="25px"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/linearLayout1"
        android:background="#ff546e7a">
        <TextView
            android:text="Show Screen"
            android:layout_width="match_parent"
            android:layout_height="73.5dp"
            android:id="@+id/textView1"
            android:background="#ff000000"
            android:textStyle="bold"
            android:textSize="30dp"
            android:textColor="#ffffffff"
            android:gravity="center" />
        <LinearLayout
            android:orientation="vertical"
            android:minWidth="25px"
            android:minHeight="25px"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/linearLayout2"
            android:gravity="center"
            android:layout_margin="10dp"
            android:background="#ff000000">
            <TextView
                android:text="username"
                android:layout_width="match_parent"
                android:layout_height="45.5dp"
                android:id="@+id/username"
                  android:padding="10dp"
                android:background="#ffffffff"
                android:textColorHint="#ff000000"/>
            <TextView
                android:text="Show Me"
                android:layout_width="match_parent"
                android:layout_height="181.0dp"
                android:id="@+id/showme"
                android:textColor="#ffffffff"
                android:textStyle="bold"
                android:textSize="20dp"
                android:gravity="center" />                    
        </LinearLayout>
        <LinearLayout
        android:orientation="horizontal"
        android:minWidth="25px"
        android:minHeight="25px"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/linearLayout4"
        android:background="#ff9e9e9e"
        android:gravity="center"
        android:layout_margin="10dp"
        android:layout_gravity="center">
        <Button
            android:text="Call Me"
            android:layout_width="120dp"
            android:layout_height="70dp"
            android:id="@+id/callme"
            android:layout_margin="10dp"
            android:textStyle="bold"
            android:textSize="20dp" />
        <Button
            android:text="mail Me"
            android:layout_width="120dp"
            android:layout_height="70dp"
            android:id="@+id/mailme"
            android:layout_margin="10dp"
            android:textSize="20dp"
            android:textStyle="bold" />
        </LinearLayout>
        <LinearLayout
        android:orientation="horizontal"
        android:minWidth="25px"
        android:minHeight="25px"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/linearLayout5"
        android:background="#ff9e9e9e"
        android:gravity="center"
        android:layout_margin="10dp"
        android:layout_gravity="center">
        <Button
            android:text="All Users"
            android:layout_width="120dp"
            android:layout_height="70dp"
            android:id="@+id/allusers"
            android:layout_margin="10dp"
            android:textStyle="bold"
            android:textSize="20dp" />
        <Button
            android:text="Logout"
            android:layout_width="120dp"
            android:layout_height="70dp"
            android:id="@+id/logout"
            android:layout_margin="10dp"
            android:textSize="20dp"
            android:textStyle="bold" />
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>